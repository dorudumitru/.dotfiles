{
  // THEME
  "workbench.startupEditor": "none",
  "workbench.settings.editor": "json",
  "workbench.colorTheme": "One Dark Pro",
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#568af2",
    "terminalCursor.foreground": "#568af2"
  },
  "workbench.iconTheme": "symbols",
  "symbols.hidesExplorerArrows": false,
  "workbench.editor.showTabs": "multiple",
  "workbench.tree.indent": 12,
  "editor.tokenColorCustomizations": {
    "[*Light*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#000"
          }
        }
      ]
    },
    "[*Dark*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#fff"
          }
        }
      ]
    },
    "textMateRules": [
      {
        "name": "One Dark italic",
        "scope": [
          "comment",
          "entity.other.attribute-name",
          "keyword",
          "markup.underline.link",
          "storage.modifier",
          "storage.type",
          "string.url",
          "variable.language.super",
          "variable.language.this"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "name": "One Dark italic reset",
        "scope": [
          "keyword.operator",
          "keyword.other.type",
          "storage.modifier.import",
          "storage.modifier.package",
          "storage.type.built-in",
          "storage.type.function.arrow",
          "storage.type.generic",
          "storage.type.java",
          "storage.type.primitive"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },

  // FONT
  "editor.fontFamily": "JetBrains Mono Medium, JetBrainsMono NF Medium",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.5, // use with JetBrains Mono
  "editor.fontLigatures": "true",
  "terminal.integrated.fontFamily": "JetBrains Mono SemiBold, JetBrainsMono NF Medium",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1.1, // use with JetBrains Mono
  // If permission is needed
  // sudo chown -R $(whoami) $(which code) && sudo chown -R $(whoami) /usr/share/code
  "fonted.font": "JetBrains Mono",

  // NVIM SETTINGS
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  // LANGUAGES
  "go.toolsManagement.autoUpdate": true,
  // install golangci-lint from https://golangci-lint.run/usage/install for this to work
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast"],
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },
  "[go.mod]": {
    "editor.defaultFormatter": "golang.go"
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.tabSize": 4
  },
  "[java]": {
    "editor.defaultFormatter": "josevseb.google-java-format-for-vs-code",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },
  "typescript.preferences.importModuleSpecifier": "relative",
  "svelte.enable-ts-plugin": true,
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "eslint.validate": ["javascript", "javascriptreact", "svelte", "typescript", "typescriptreact"],
  "prettier.printWidth": 120,

  // MISC
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always"
  },
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on", // Regex justify function null @
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLines": 8,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.inlineSuggest.enabled": true,
  "explorer.autoReveal": false,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "files.autoSave": "onFocusChange",
  "git.autofetch": true,
  "window.titleBarStyle": "custom",
  "window.commandCenter": false,
  "remote.SSH.showLoginTerminal": true,
  "totalTypeScript.hideAllTips": true,
  "files.associations": {
    ".env*": "dotenv"
  },
  "dotenv.enableAutocloaking": false,
  "breadcrumbs.enabled": false,
  "terminal.integrated.cursorBlinking": true,

  // TELEMETRY
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
  "gitlens.telemetry.enabled": false,
  "rest-client.enableTelemetry": false,
  "partialDiff.enableTelemetry": false,
  "dotnetAcquisitionExtension.enableTelemetry": false,

  // OTHER
  "applicationRegistrations.useEventualConsistency": false,
  "applicationRegistrations.applicationListView": "Owned Applications",
  "@azure.argTenant": "",
  "sqltools.useNodeRuntime": true
}
