{
  // THEME
  "workbench.settings.editor": "json",
  "workbench.colorTheme": "One Dark Pro",
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#568af2",
    "terminalCursor.foreground": "#568af2"
  },
  "workbench.iconTheme": "symbols",
  "symbols.hidesExplorerArrows": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "name": "One Dark italic",
        "scope": [
          "comment",
          "entity.other.attribute-name",
          "keyword",
          "markup.underline.link",
          "storage.modifier",
          "storage.type",
          "string.url",
          "variable.language.super",
          "variable.language.this"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "name": "One Dark italic reset",
        "scope": [
          "keyword.operator",
          "keyword.other.type",
          "storage.modifier.import",
          "storage.modifier.package",
          "storage.type.built-in",
          "storage.type.function.arrow",
          "storage.type.generic",
          "storage.type.java",
          "storage.type.primitive"
        ],
        "settings": {
          "fontStyle": ""
        }
      },
      {
        "scope": "keyword.other.dotenv",
        "settings": {
          "foreground": "#FF000000"
        }
      }
    ]
  },

  // FONT
  "editor.fontFamily": "JetBrains Mono Medium, JetBrainsMono Nerd Font",
  "editor.fontSize": 16,
  "editor.lineHeight": 1.5, // use with JetBrains Mono
  "editor.fontLigatures": "true",
  "terminal.integrated.fontFamily": "JetBrains Mono Medium, JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 1.2, // use with JetBrains Mono
  // If permission is needed
  // sudo chown -R $(whoami) $(which code)
  // sudo chown -R $(whoami) /usr/share/code
  "fonted.font": "JetBrains Mono",

  // NVIM SETTINGS
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  // LANGUAGES
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.tabSize": 4
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "go.toolsManagement.autoUpdate": true,
  // install golangci-lint from https://golangci-lint.run/usage/install for this to work
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast"],
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "typescript.preferences.importModuleSpecifier": "relative",
  "svelte.enable-ts-plugin": true,
  "eslint.validate": ["javascript", "javascriptreact", "svelte", "typescript", "typescriptreact"],
  "prettier.printWidth": 120,

  // MISC
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on", // Regex justify function null @
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLines": 8,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.inlineSuggest.enabled": true,
  "explorer.autoReveal": false,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "files.autoSave": "onFocusChange",
  "git.autofetch": true,
  "window.menuBarVisibility": "toggle",
  "window.titleBarStyle": "custom",
  "window.commandCenter": false,
  "window.zoomLevel": 0.5,
  "remote.SSH.showLoginTerminal": true,
  "totalTypeScript.hideAllTips": false,
  "totalTypeScript.hideBasicTips": false,
  "totalTypeScript.hiddenTips": [
    "basic-types",
    "array-type",
    "typing-function-parameters",
    "function-return-type",
    "variable-type-annotation",
    "passing-generics-to-types",
    "type-alias-declaration",
    "typeof",
    "omit-utility-type",
    "literal-type",
    "record-utility-type",
    "never-keyword",
    "partial-utility-type",
    "ts-object-type",
    "interface-declaration",
    "pick-utility-type",
    "union-type",
    "any-type",
    "as-assertion",
    "undefined-keyword",
    "keyof",
    "readonly-utility-type"
  ],
  "codeium.enableSearch": true,
  "codeium.enableConfig": {
    "*": true,
    "xml": true
  },
  "inlineFold.unfoldOnLineSelect": true,
  "inlineFold.unfoldedOpacity": 1,
  "breadcrumbs.enabled": false,
  "terminal.integrated.cursorBlinking": true,

  // TELEMETRY
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
  "gitlens.telemetry.enabled": false,
  "rest-client.enableTelemetry": false,
  "partialDiff.enableTelemetry": false,
  "applicationRegistrations.useEventualConsistency": false,
  "code-runner.enableAppInsights": false,
  "dotnetAcquisitionExtension.enableTelemetry": false,
  "files.associations": {
    ".env*": "dotenv"
  }
}
